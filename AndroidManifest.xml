<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tatsuo.tamenchan"
    android:versionCode="4"
    android:versionName="0.30" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".TamenchanMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.tatsuo.tamenchan.GameMainActivity"
        	android:screenOrientation="portrait"></activity>
        <activity android:name="com.tatsuo.tamenchan.HiScoreActivity"
        	android:screenOrientation="portrait"></activity>
        <activity android:name="com.tatsuo.tamenchan.HiScoreTabActivity"
        	android:screenOrientation="portrait"></activity>
        <activity android:name="com.tatsuo.tamenchan.OptionActivity"
        	android:screenOrientation="portrait"></activity>
        <activity android:name="com.tatsuo.tamenchan.ResultActivity"
        	android:screenOrientation="portrait"></activity>
        
    </application>

	<uses-permission android:name="android.permission.INTERNET"/>

</manifest>
