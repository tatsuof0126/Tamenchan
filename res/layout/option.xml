<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal"
	android:baselineAligned="true"
    android:orientation="vertical" >

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="20dp"
       	android:text="" />

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textSize="18dp"
       	android:text="アプリ設定" />

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="20dp"
       	android:text="" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
	    android:orientation="horizontal" >
    
		<Button
			android:text="レベル設定"
			android:id="@+id/setgamelevel"
			android:layout_width="120dp"
			android:layout_height="wrap_content" />

	    <TextView
   		    android:layout_width="20dp"
       		android:layout_height="wrap_content"
	       	android:text="" />
    
	    <TextView
			android:id="@+id/gamelevel"
   		    android:layout_width="100dp"
       		android:layout_height="wrap_content"
		    android:textSize="18dp"
	       	android:text="初級" />
    
    </LinearLayout>

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="20dp"
       	android:text="" />
	
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
	    android:orientation="horizontal" >
	
		<Button
			android:text="牌の種類"
			android:id="@+id/sethaitype"
			android:layout_width="120dp"
			android:layout_height="wrap_content" />

	    <TextView
   		    android:layout_width="20dp"
       		android:layout_height="wrap_content"
	       	android:text="" />
    
		<ImageView
			android:id="@+id/haitypeimage"
			android:src="@drawable/m1"
			android:layout_gravity="center_horizontal"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:layout_width="30dp"
			android:layout_height="40dp" />

	    <TextView
   		    android:layout_width="12dp"
       		android:layout_height="wrap_content"
	       	android:text="" />
    
	    <TextView
			android:id="@+id/haitype"
   		    android:layout_width="58dp"
       		android:layout_height="wrap_content"
		    android:textSize="18dp"
	       	android:text="萬子" />

    </LinearLayout>

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="30dp"
       	android:text="" />
	
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/twitterprofile"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
	    android:orientation="horizontal" >
    
		<ImageView
			android:id="@+id/twittericon"
			android:scaleType="fitXY"
			android:layout_width="40dp"
			android:layout_height="40dp" />
		
	    <TextView
			android:id="@+id/twittername"
   	    	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:textSize="18sp"
	       	android:text="" />
	    
		<Button
			android:text="連携解除"
			android:id="@+id/disconnecttwitter"
			android:layout_width="80dp"
			android:layout_height="wrap_content" />

		<Button
			android:text="Twitter連携"
			android:id="@+id/connecttwitter"
			android:layout_width="150dp"
			android:layout_height="wrap_content" />
	
	</LinearLayout>

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="30dp"
       	android:text="" />
    
	<Button
		android:text="アプリについて"
		android:id="@+id/aboutapp"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

    <TextView
   	    android:layout_width="fill_parent"
       	android:layout_height="35dp"
       	android:text="" />
    
	<Button
		android:text="メニューに戻る"
		android:id="@+id/menu"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

</LinearLayout>
